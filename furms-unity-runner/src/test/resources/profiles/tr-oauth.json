{
	"ver": "2",
	"name": "oauth",
	"description": "For translation of localOAuth authn (loopback)",
	"rules": [
		{
			"condition": {
				"conditionValue": "attr contains 'sub'"
			}, 
			"action": {
				"name": "mapIdentity",
				"parameters": [
					"identifier",
					"attr['sub']",
					"sys:all",
					"CREATE_OR_MATCH"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "attr contains 'name'"
			}, 
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"name",
					"/",
					"attr['name']",
					"CREATE_OR_UPDATE"
				]
			}			
		}
	]
}